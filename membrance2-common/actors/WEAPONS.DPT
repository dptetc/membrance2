{
	Weapon.SelectionOrder 3700
	Weapon.Kickback 20
	+NOAUTOFIRE
	DamageType BloodFists
	States
	{
	Ready2:
		FIST A 0 A_JumpIfInventory("BloodFistItem", 1, 1)
		Goto Ready
		FIST G 11 A_WeaponReady
		Loop
