Actor PhaseBFG : MEM_Weapon
{
	+AMMO_OPTIONAL
	Inventory.PickupMessage "You got the PhaseBFG! Don't overcharge!"
	Inventory.PickupSound "misc/d3pickup"
	Weapon.SelectionOrder 9500
	Weapon.AmmoType2 "Cell"
	Weapon.AmmoType1 "BFGHolder"
	Weapon.AmmoGive2 30
	Weapon.AmmoGive1 30
	Weapon.AmmoUse1 10
	Weapon.Kickback 10000
	ExplosionRadius 512
	ExplosionDamage 1000
	States
	{
	Spawn:
		PHAS A -1
		Stop
	Ready:
		PHAS A 1 A_PlaySound("weapons/PhaseBFGidle")
		Loop
	Deselect:
		PHAS E 1 A_Lower
		Loop
	Select:
		PHAS E 1 A_Raise
		Loop
	Fire:
		PHAS A 0 A_JumpIfInventory("BFGHolder", 0, "Fire2")
		PHAS A 0
		Goto Ready
	Fire2:
		PHAS A 0 A_JumpIfInventory("BFGHolder", 1, "Fire3")
		PHAS A 0 A_JumpIfInventory("Cell", 0, "NoAmmo")
		PHAS A 0 A_JumpIfInventory("Cell", 1, "Fire4")
		PHAS A 0
		Goto Ready
	Fire3:
		PHAS A 0
		Goto AltFire
	Fire4:
		PHAS A 9 A_PlaySound("weapons/d3bfgc")
		PHAS B 9
		PHAS C 9
		PHAS D 9 
		PHAS E 9 
		PHAS F 9
		PHAS G 9 
		PHAS H 9
		PHAS I 9
		PHAS A 1 A_GunFlash
		PHAS B 1
		PHAS D 1
		PHAS K 1
		PHAS J 1
		PHAS I 1
		PHAS H 1
		PHAS G 2
		PHAS F 2
		PHAS E 1
		PHAS D 1
		PHAS C 1
		PHAS B 2
		PHAS A 15
		Goto Ready
	AltFire:
		PHAS A 0
		PHAS A 0 A_JumpIfInventory("BFGHolder", 30, "MaxHolder")
		PHAS A 0 A_JumpIfInventory("Cell", 0, "NoAmmo")
		PHAS A 0 A_JumpIfInventory("Cell", 1, "Reload")
		PHAS A 0
		Goto Ready
	Reload:
		PHAS A 0 A_TakeInventory("Cell", 10)
		PHAS A 0 A_GiveInventory("BFGHolder", 10)
		PHAS A 0 A_JumpIfInventory("BFGHolder", 30, 1)
		Goto AltFire
	MaxHolder:
		PHAS K 1
		PHAS L 15 A_PlaySound ("weapons/PhaseBFGcool")
		PHAS M 20
		PHAS N 30
		PHAS O 1
		Goto Ready
	NoAmmo:
		PHAS A 0
		Goto Ready
	Flash:
		TNT1 A 2 Bright A_Light1
		TNT1 A 3 Bright A_FireBullets(0,0,1,0,"PhaseBFGShot")
		Goto LightDone
	}
}

